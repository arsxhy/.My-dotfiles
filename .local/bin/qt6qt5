#!/bin/zsh

packages=(
   "qt6-3d"
   "qt6-charts"
   "qt6-connectivity"
   "qt6-datavis3d"
   "qt6-graphs"
   "qt6-httpserver"
   "qt6-location"
   "qt6-networkauth"
   "qt6-positioning"
   "qt6-quick3d"
   "qt6-remoteobjects"
   "qt6-scxml"
   "qt6-sensors"
   "qt6-serialbus"
   "qt6-serialport"
   "qt6-tools"
   "qt6-webchannel"
   "qt6-webengine"
   "qt6-websockets"
)

for package in "${packages[@]}"; do
    print -P "%F{green}Menginstal $package...%f"
    sudo pacman -S --needed --noconfirm "$package"
done

print -P "%F{cyan}Instalasi Selesai%f"
