# Theming border and Windows --------------
# target                 title     bg    text   indicator  border
client.focused           $rose     $base $text  $rose      $rose
client.focused_inactive  $text     $base $text  $subtle    $surface
client.unfocused         $text     $base $text  $overlay   $overlay
client.urgent            $text     $base $text  $urgent    $urgent
client.placeholder       $base     $base $text  $overlay   $overlay
client.background        $base

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        status_command i3status -c ~/.config/i3status/i3status.conf
	font pango:JetBrainsMono Nerd Font, Font Awesome 8
	position top
	separator_symbol "|"
	# i3bar_command --transparency

	colors {
	# background <color>
	# statusline <color>
	# separator <color>

	# <colorclass> <border> <background> <text>
	background $base
        statusline $text
        separator $rose

        focused_workspace  $rose $love $text
        active_workspace   $rose $love $text
        inactive_workspace $surface $overlay $text
        urgent_workspace   $love $urgent $text
        binding_mode       $overlay $urgent $text
	}
}

